@model AgriEnergyPlatform.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<h1 class="text-center pb-2">Add New Product</h1>

<div class="row">
    <div class="col-lg-9 mx-auto rounded border px-3 py-4 bg-light shadow-sm">
        <form asp-action="AddProduct" asp-controller="Farmer" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductCategory" class="form-label">Product Category</label>
                <input asp-for="ProductCategory" class="form-control" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductionDate" class="form-label">Production Date</label>
                <input asp-for="ProductionDate" type="date" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success w-100">➕ Add Product</button>
            </div>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger mt-3">@ViewData["ErrorMessage"]</div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

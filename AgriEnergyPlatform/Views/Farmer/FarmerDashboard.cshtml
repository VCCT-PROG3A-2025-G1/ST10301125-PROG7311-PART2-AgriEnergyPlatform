@model List<Product>

@{
    ViewData["Title"] = "Farmer Dashboard";
}

<h2 class="text-center pb-2">Farmer Dashboard</h2>

<div class="row">
    <div class="col-lg-10 mx-auto bg-light rounded shadow-sm p-4">

        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.ProductCategory</td>
                        <td>@product.ProductionDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a href="@Url.Action("AddProduct", "Farmer")" class="btn btn-success">+ Add New Product</a>
        </div>

    </div>
</div>

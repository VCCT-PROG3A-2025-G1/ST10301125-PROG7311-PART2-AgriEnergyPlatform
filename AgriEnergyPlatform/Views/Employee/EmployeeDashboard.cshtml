@model List<Product>

@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2 class="text-center pb-2">Employee Dashboard</h2>

<div class="row">
    <div class="col-lg-10 mx-auto bg-light rounded shadow-sm p-4">

        <form method="get" class="row g-3 mb-4">
            <div class="col-md-4">
                <input type="text" class="form-control" name="dateFilter" placeholder="Filter by Date (YYYY-MM-DD)" />
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" name="categoryFilter" placeholder="Filter by Category" />
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" name="farmerFilter" placeholder="Filter by Farmer" />
            </div>
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">🔍 Filter</button>
            </div>
        </form>

        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.ProductCategory</td>
                        <td>@product.ProductionDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
